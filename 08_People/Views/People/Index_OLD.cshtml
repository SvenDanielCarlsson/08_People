@model _08_People.Models.ViewModels.PeopleViewModel

@{
    ViewData["Title"] = "People";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model.Persons.Count < 1)
{
    <br />
    <p>There are no people in the list at the moment</p>
}
else
{
    <div class="row">

        <h3>List Of People</h3>

        <div class="align-items-end">
            @using (Html.BeginForm("Index", "People", FormMethod.Get))
            {
                @Html.TextBox("search")
                <input type="submit" value="Search" />
            }
        </div>
    </div>


    <br />
    <table class="table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Living In</th>
            <th>Details</th>
        </tr>
        <tbody>
            @foreach (var Person in Model.Persons)
            {
                <tr>
                    <td>@Person.FirstName</td>
                    <td>@Person.LastName</td>
                    <td>@Person.InCity</td>
                    <td>
                        <a asp-controller="People" asp-action="Details" asp-route-id="@Person.Id">
                            <input type="submit" class="btn btn-info" value="Details" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}   <!-- End Of else statement -->
