@model _08_People.Models.ViewModels.CitiesViewModel

@{
    ViewData["Title"] = "Cities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Cities.Count < 1)
{
    <br />
    <p>There are no cities in the list at the moment</p>
}
else
{
    <h3>Cities</h3>
    <hr />

    <div class="container row">
        <div class="col row">
            <a class="nav-link text-dark" asp-area="" asp-controller="Cities" asp-action="Create">Add City</a>
        </div>

        <div class="align-items-end">
            @using (Html.BeginForm("Index", "Cities", FormMethod.Get))
            {
                @Html.TextBox("search")
                <input type="submit" value="Search" />
            }
        </div>
    </div>


    <br />
    <div class="container">
        <div class="row table-primary" style="border-bottom-style: ridge; font-weight:bolder; font-size:larger">
            <div class="col">City</div>
            <div class="col">Num. Of People</div>
            <div class="col">Country</div>
            <div class="col">Details</div>
        </div>

        @foreach (var City in Model.Cities)
        {
            <div class="divChecker divHover tableBgColor row">

                <div class="col align-self-center">@City.CityName</div>
                <div class="col align-self-center">555</div>
                <div class="col align-self-center">@City.CountryId</div>
                <div class="col align-self-center">
                    <a asp-controller="Country" asp-action="Details" asp-route-id="@City.Id">
                        <input type="submit" class="btn btn-info" value="Details" />
                    </a>
                </div>

            </div>
        }
    </div>
}